<Window x:Class="InterfazGrafica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InterfazGrafica"
        mc:Ignorable="d"
        Title="Mi Primera Ventana" Height="600" Width="900">
    <!--Esto es un comentario-->
    <!-- Esto es un contenedor -->
    <StackPanel>
        <!--Texto plano-->
        <!--Orden de margenes: Left, Top, Right, Bottom-->
        <TextBlock TextAlignment="Center" Margin="20,15,20,5">Correo: </TextBlock>
        <!--Caja para introducir texto-->
        <TextBox TextAlignment="Center" Margin="50,15,50,5"></TextBox>
        <TextBlock TextAlignment="Center" Margin="20,15,20,5">Contraseña:</TextBlock>
        <TextBox TextAlignment="Center" Margin="50,15,50,5"></TextBox>
        <Button Width="100" >Iniciar Sesión</Button>
    </StackPanel>
</Window>
